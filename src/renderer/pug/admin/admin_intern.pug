extends ../templates/head.pug

block title
  title Add Intern

append link
  link(rel="stylesheet" href="../../css/admin/admin_add.css")
  link(rel="stylesheet" href="../../css/toast.css")

block fa-link
  link(rel="stylesheet" href="../../css/all.min.css")


block content
  i(class="fa fa-times close")
  section(class="admin-add-user")
    i(class="fa fa-times close")
    form(class="admin-add-user-form" enctype="multipart/form-data")
      p.op Add Intern
      
      include ../templates/user_cred_form.pug

      label
        span Role
        select(name="duty" required)
          option(value="Please Select" selected hidden) Please Select
          option(value="Doctor") Doctor
          option(value="Nurse") Nurse
          option(value="Accountant") Accountant
          option(value="Pharmacist") Pharamcist
          option(value="Receptionist") Receptionist
          option(value="Laboratorist") Laboratorist

      button(type="submit") Save
      button(type="reset" class="reset") Reset
  script(src="../../js/editUser.js")